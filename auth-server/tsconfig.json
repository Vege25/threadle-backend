{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@sharedTypes/*": ["../hybrid-types/*"]
    }
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "../media-api/src/api/routes/chatRoute.ts",
    "../media-api/src/api/models/chatModel.ts",
    "../media-api/src/api/controllers/chatController.ts"
  ]
}
